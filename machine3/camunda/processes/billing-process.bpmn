<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL" 
                  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" 
                  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC" 
                  xmlns:di="http://www.omg.org/spec/DD/20100524/DI" 
                  xmlns:camunda="http://camunda.org/schema/1.0/bpmn"
                  id="Definitions_2" 
                  targetNamespace="http://bpmn.io/schema/bpmn">
  
  <bpmn:process id="billing-process" name="Parcours Soin vers Facturation" isExecutable="true">
    
    <!-- Start Event -->
    <bpmn:startEvent id="StartEvent_Consultation" name="Consultation terminée">
      <bpmn:outgoing>Flow_1</bpmn:outgoing>
    </bpmn:startEvent>
    
    <!-- Service Task: Collecter codes actes -->
    <bpmn:serviceTask id="ServiceTask_CollectActs" name="Collecter Codes Actes">
      <bpmn:extensionElements>
        <camunda:connector>
          <camunda:connectorId>http-connector</camunda:connectorId>
          <camunda:inputOutput>
            <camunda:inputParameter name="url">http://cardio-consultation-service:5000/api/consultation/${consultationId}</camunda:inputParameter>
            <camunda:inputParameter name="method">GET</camunda:inputParameter>
            <camunda:outputParameter name="acts">${response.acts}</camunda:outputParameter>
          </camunda:inputOutput>
        </camunda:connector>
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_1</bpmn:incoming>
      <bpmn:outgoing>Flow_2</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <!-- Service Task: Générer facture -->
    <bpmn:serviceTask id="ServiceTask_GenerateInvoice" name="Générer Facture">
      <bpmn:extensionElements>
        <camunda:connector>
          <camunda:connectorId>http-connector</camunda:connectorId>
          <camunda:inputOutput>
            <camunda:inputParameter name="url">http://esb-central:8081/api/billing/generate</camunda:inputParameter>
            <camunda:inputParameter name="method">POST</camunda:inputParameter>
            <camunda:inputParameter name="payload">${billingData}</camunda:inputParameter>
            <camunda:outputParameter name="invoiceNumber">${response.invoiceNumber}</camunda:outputParameter>
          </camunda:inputOutput>
        </camunda:connector>
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_2</bpmn:incoming>
      <bpmn:outgoing>Flow_3</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <!-- Service Task: Envoyer notification -->
    <bpmn:serviceTask id="ServiceTask_SendNotification" name="Envoyer Facture par Email">
      <bpmn:extensionElements>
        <camunda:connector>
          <camunda:connectorId>http-connector</camunda:connectorId>
          <camunda:inputOutput>
            <camunda:inputParameter name="url">http://notification-service:8083/api/notifications/send</camunda:inputParameter>
            <camunda:inputParameter name="method">POST</camunda:inputParameter>
            <camunda:inputParameter name="payload">${notificationData}</camunda:inputParameter>
          </camunda:inputOutput>
        </camunda:connector>
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_3</bpmn:incoming>
      <bpmn:outgoing>Flow_4</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <!-- End Event -->
    <bpmn:endEvent id="EndEvent_BillingComplete" name="Facturation terminée">
      <bpmn:incoming>Flow_4</bpmn:incoming>
    </bpmn:endEvent>
    
    <!-- Sequence Flows -->
    <bpmn:sequenceFlow id="Flow_1" sourceRef="StartEvent_Consultation" targetRef="ServiceTask_CollectActs" />
    <bpmn:sequenceFlow id="Flow_2" sourceRef="ServiceTask_CollectActs" targetRef="ServiceTask_GenerateInvoice" />
    <bpmn:sequenceFlow id="Flow_3" sourceRef="ServiceTask_GenerateInvoice" targetRef="ServiceTask_SendNotification" />
    <bpmn:sequenceFlow id="Flow_4" sourceRef="ServiceTask_SendNotification" targetRef="EndEvent_BillingComplete" />
    
  </bpmn:process>
  
  <bpmndi:BPMNDiagram id="BPMNDiagram_2">
    <bpmndi:BPMNPlane id="BPMNPlane_2" bpmnElement="billing-process">
      <!-- Diagram elements would go here -->
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
  
</bpmn:definitions>


